[user]
    name = John Gathure
    email = juangathure@gmail.com
    username = johngathure
[alias]
    # status
    st = status
    sb = status -s -b

    # checkout
    o = checkout
    om = checkout master
    ob = checkout -b

    # branch
    br = branch
    bra = branch -a
    brd = branch -d
    brdd = branch -D

    # commit
    c = commit
    ca = commit --amend
    ce = commit --amend --no-edit

    # cherrypick
    cp = cherry-pick
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue

    # diff
    d = diff
    dc = diff --cached
    dt = difftool
    dct = difftool --cached

    # remote
    ru = remote update

    # merge
    m = merge
    ma = merge --abort
    mc = merge --continue
    ms = merge --skip

    # push
    ps = push
    pfs = push -f

    # pull
    pl = pull
    pb = pull --rebase

    # rebase
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    rbs = rebase --skip

    # reset
    re = reset
    rh = reset HEAD
    reh = reset --hard
    res = reset --soft

    # stash
    sa = stash apply
    sc = stash clear
    sd = stash drop
    sl = stash list
    sp = stash pop
    sw = stash show

[push]
    default = upstream

[diff]
    tool = nvim
[difftool]
    prompt = false

[merge]
    tool = nvim
[mergetool]
    prompt = false
[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[core]
	editor = nvim

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[color "diff"]
    meta = yellow bold
    old = red
    new = green
    whitespace = red reverse
